        android:layout_marginEnd="136dp"
        android:background="@android:color/transparent"
        android:onClick="showMoodInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smile" />

    <TextView
        android:id="@+id/tv_energy"
        android:layout_width="45dp"
        android:layout_height="13dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="40dp"
        android:text="Энергия"
        android:textColor=" #8ACF7F"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_energy"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/rv_rubli2"
        android:layout_width="46dp"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="руб."
        android:textColor=" #FF1C60"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/tv_rubli"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_rubli"
        android:layout_width="23dp"
        android:layout_height="17dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:text="200"
        android:textColor=" #FF1C60"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_rubli"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:onClick="showMoneyInformation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rubl" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings" />

    <TextView
        android:id="@+id/tv_smile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="128dp"
        android:text="Настроение"
        android:textColor=" #8ACF7F"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
