        android:id="@+id/btn_everydayTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="28dp"
        android:background="@android:color/transparent"
        android:onClick="goStudying"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/everyday" />

    <ImageButton
        android:id="@+id/btn_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"
        android:layout_marginBottom="28dp"
        android:background="@android:color/transparent"
        android:onClick="showCourseStatistics"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_everydayTask"
        app:srcCompat="@drawable/statistic" />

    <ImageButton
        android:id="@+id/btn_nextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"
        android:background="@android:color/transparent"
        android:onClick="goToNextDay"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toStartOf="@+id/btn_courses"
        app:srcCompat="@drawable/naxtday" />

    <ImageButton
        android:id="@+id/btn_courses"
        android:layout_width="45dp"
        android:layout_height="58dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="28dp"
        android:background="@android:color/transparent"
        android:onClick="goToCourses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/course" />

